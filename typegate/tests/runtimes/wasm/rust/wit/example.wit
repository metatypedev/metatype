package example:host;

world host {
  // https://component-model.bytecodealliance.org/design/wit.html#type-aliases

  variant category {
    a, b(string), c
  }

  enum level {
    bronze, silver, gold
  }

  flags capabilities {
    attack, defend, cast
  }

  record some-entity {
    name: string,
    age: option<u8>,
    category: category,
    level: level,
    attributes: capabilities
  }

  export add: func(a: f64, b: f64) -> f64;
  export range: func(a: u32, b: u32) -> result<list<u32>, string>;

  export record-creation: func() -> list<some-entity>;
  export output-coercion: func() -> tuple<
    f32,
    u64,
    string,
    char
  >;

  // import substract: func() -> string;
}
